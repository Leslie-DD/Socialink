<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/new_title_bar2"></include>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></com.jcodecraeer.xrecyclerview.XRecyclerView>
    <View
        android:layout_marginTop="15dp"
        android:background="@color/text_F2"
        android:layout_width="match_parent"
        android:layout_height="8dp"></View>
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etContent"
            android:layout_marginLeft="12dp"
            android:singleLine="true"
            android:paddingTop="7dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/text_3"
            android:background="@drawable/edittext_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/ivSelect"
            android:src="@mipmap/selected2"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:text="匿名"
            android:textColor="@color/text_66"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ivSend"
            android:src="@mipmap/send"
            android:paddingRight="12dp"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>