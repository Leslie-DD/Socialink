<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/new_title_bar2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="请选择您的性别"
                android:textColor="#333333"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/llMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivMale"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/male1" />

                    <TextView
                        android:id="@+id/tvMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="男"
                        android:textColor="#333333"
                        android:textSize="17sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivFemale"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/female1" />

                    <TextView
                        android:id="@+id/tvFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="女"
                        android:textColor="#999999"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:text="选择你喜欢的,让我更懂你"
                android:textColor="#333333"
                android:textSize="14sp" />

            <com.example.heshequ.view.FlowLayout
                android:id="@+id/flow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                app:height_space="10dp"
                app:width_space="10dp" />

            <Button
                android:id="@+id/btStart"
                style="@style/save_style"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="开启相遇之旅"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/tvSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="跳过"
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
