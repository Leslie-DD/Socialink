<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.leslie.socialink.activity.login.ForgetPwdActivity">
    <include layout="@layout/new_title_bar2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:id="@+id/etPhone"
        android:background="#f8f8fd"
        android:hint="输入手机号"
        android:inputType="number"
        android:paddingLeft="26dp"
        style="@style/edit_style"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f8f8fd"
        android:paddingRight="26dp"
        android:layout_marginTop="10dp"
        android:layout_height="46dp">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="26dp"
            style="@style/edit_style"
            android:id="@+id/etCode"
            android:hint="输入验证码"
            android:maxLength="6"
            android:background="#f8f8fd"
            android:inputType="number"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:background="@drawable/code_bg"
            android:textSize="14sp"
            android:id="@+id/tvCode"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f8f8fd"
       android:paddingRight="26dp"
        android:layout_marginTop="10dp"
        android:layout_height="46dp">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="46dp"
            android:id="@+id/etPwd"
            android:background="#f8f8fd"
            android:hint="输入6-20位包含数字和字母的密码"
            android:inputType="textPassword"
            android:paddingLeft="26dp"
            style="@style/edit_style"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/bkj"
            android:id="@+id/ivSee"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f8f8fd"
        android:paddingRight="26dp"
        android:layout_marginTop="10dp"
        android:layout_height="46dp">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="46dp"
            android:id="@+id/etPwd2"
            android:background="#f8f8fd"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="26dp"
            style="@style/edit_style"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/bkj"
            android:id="@+id/ivSee2"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f8f8fd"
        android:id="@+id/llSchool"
        android:layout_marginTop="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="center_vertical"
        android:layout_height="46dp">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="选择学校"
        android:id="@+id/tvSchool"
        android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/selected"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        style="@style/save_style"
        android:text="下一步"
        android:id="@+id/btNext"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />
</LinearLayout>
