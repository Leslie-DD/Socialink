<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:id="@+id/noticeHome"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.example.heshequ.view.CircleView
                android:id="@+id/mynoticephoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/head3" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            >

            <TextView
                android:id="@+id/mynoticename"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:paddingTop="5dp"
                android:text="小江" />

            <ImageView
                android:id="@+id/mynoticedeletes"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/mynoticename"
                android:layout_alignParentEnd="true"

                android:layout_marginEnd="12dp"
                android:src="@mipmap/yiguanzhu" />


            <!--<TextView-->
                <!--android:id="@+id/mynoticedelete"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="15dp"-->
                <!--android:background="@drawable/ffdb74_10"-->
                <!--android:text="取消关注" />-->



        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/f8"></View>


    </LinearLayout>

</LinearLayout>




