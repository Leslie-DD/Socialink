<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hnu.heshequ.classification.ClassifationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/classification_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/black_back"
            android:paddingTop="5dp"
            android:scaleType="centerInside" />

        <com.hnu.heshequ.classification.ClearEditText
            android:id="@+id/et_classi_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/search_leading"
            android:drawableRight="@drawable/edittext_delete_selector"
            android:gravity="start|center_vertical"
            android:hint="搜索"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F8F8" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lv_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_titile"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#F8F8F8"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/app_name" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
