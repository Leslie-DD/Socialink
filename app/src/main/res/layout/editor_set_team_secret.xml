<?xml version="1.0" encoding="utf-8"?>
<com.zhaoxing.view.sharpview.SharpLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="232dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/white"
    android:gravity="center"
    app:radius="5dp"
    app:backgroundColor="@android:color/white">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团队密码:"
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            android:background="@drawable/activity_flag"
            />

        <TextView
            android:id="@+id/teamSecret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_00bbff_17"
            android:text="123456"
            android:textColor="@android:color/white"
            />
    </LinearLayout>


</LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/changeSecret"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_00bbff_solid_13"
            android:text="密码更改"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/closeSecret"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_00bbff_solid_13"
            android:text="关闭加团"
            android:textColor="@android:color/white" />
    </LinearLayout>




</com.zhaoxing.view.sharpview.SharpLinearLayout>