    <com.example.heshequ.view.NoScrollWebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:gravity="center_vertical"
        android:background="#05bcff"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="15dp"
            android:lines="1"
            android:ellipsize="end"
            android:text="2018年3月30日 10:00"
            android:textColor="@color/base_color_white"
            android:textSize="13.5sp"
            android:id="@+id/tvBlueTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="为您线上答疑，欢迎向我提问！"
            android:textColor="@color/base_color_white"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/f8"
        android:layout_width="match_parent"
        android:layout_height="8dp"></View>
    <TextView
        android:drawableLeft="@mipmap/icons1"
        android:drawablePadding="8dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:text="他们在问"
        android:textSize="14sp"
        android:textColor="@color/text66"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:text="暂无评论"
        android:layout_centerInParent="true"
        android:textSize="17sp"
        android:textColor="@color/text9"
        android:id="@+id/tvTips"
        android:paddingTop="60dp"
        android:paddingBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>