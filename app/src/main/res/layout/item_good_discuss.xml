<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.hnu.heshequ.view.CircleView
            android:id="@+id/ivHead"
            android:src="@mipmap/head3"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/tvName"
            android:lines="1"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text3"
            android:textSize="14.5sp"
            android:text="李思思"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvTime"
            android:lines="1"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text9"
            android:textSize="13sp"
            android:text="今天  12:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"></View>
        <TextView
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:id="@+id/tvDing"
            android:textColor="@color/text93"
            android:textSize="13sp"
            android:text="0 顶"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:lineSpacingMultiplier="1.35"
            android:textSize="13sp"
            android:textColor="@color/text66"
            android:text="湖南大学有没有轮滑社湖南大学有没有轮滑社湖南大学有没有轮滑社湖南大学有没有轮滑社"
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="#05bcff"
        android:id="@+id/tvResult"
        android:textSize="13sp"
        android:text="回复  (2)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>