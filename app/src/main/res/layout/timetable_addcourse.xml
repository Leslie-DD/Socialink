<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="0dp">

        <include layout="@layout/new_title_bar2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请输入课程的所处时间（例：周一）"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/day_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grey"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请输入您想要添加的课程的名字:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grey"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请输入课程的开始节数:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/course_begin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grey"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请输入课程的上课节数:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/course_span"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grey"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请输入课程的地点"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/course_site"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grey"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请输入课程的授课老师"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/course_teacher"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grey"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请输入课程的班级"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/course_class"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grey"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="请输入课程的所处周数"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/course_week"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grey"
            android:textSize="30dp" />

        <Button
            android:id="@+id/set"
            style="@style/save_style"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:text="确认更改" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>