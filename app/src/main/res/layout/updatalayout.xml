<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/group2"
        android:id="@+id/ivClose"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
   <ImageView
       android:layout_width="match_parent"
       android:src="@mipmap/group1"
       android:scaleType="fitXY"
       android:id="@+id/bg"
       android:layout_marginTop="23dp"
       android:layout_height="wrap_content">
   </ImageView>

     <LinearLayout
         android:layout_below="@id/bg"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         android:paddingBottom="20dp"
         android:paddingTop="10dp"
         android:background="@drawable/up_bg"
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="最新版本：U123"
             android:textColor="#FF000000"
             android:id="@+id/tvVersion"
             android:textSize="13sp"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="新版本大小：12Mb"
             android:textColor="#FF000000"
             android:layout_marginTop="8dp"
             android:id="@+id/tvSize"
             android:textSize="13sp"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="更新内容："
             android:textColor="#FF000000"
             android:layout_marginTop="15dp"
             android:textSize="13sp"
             />
         <TextView
             android:layout_width="match_parent"
             android:textSize="13sp"
             android:layout_height="wrap_content"
             android:id="@+id/tvDesc"
             android:text="1.修复1232131232.修复；adadsa"
             android:textColor="#FF5C5C5C"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="38dp"
             android:gravity="center"
             android:text="立即更新"
             android:background="@drawable/up_bg2"
             android:id="@+id/tvUp2"
             android:layout_marginTop="30dp"
             android:textColor="#FF000000"
             android:textSize="16sp"
             />
     </LinearLayout>
</RelativeLayout>